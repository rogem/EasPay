<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".depositmoney"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal"
        android:background="#800000">

        <ImageView
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="20dp"
            android:src="@drawable/ic_back"
            android:onClick="btnbchme"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="130dp"
            android:layout_marginTop="15dp"
            android:text="Deposit"
            android:textColor="#FFFFFF"
            android:textSize="20dp" />

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="30dp"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="Enter Amount*"
            android:textSize="20dp"/>

        <EditText
            android:id="@+id/EditAmount"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_marginTop="10dp"
            android:hint="Enter Amount"
            android:layout_gravity="center"
            android:inputType="number"
            android:background="@drawable/border"/>

        <EditText
            android:id="@+id/ETFirstName"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_marginTop="18dp"
            android:hint="First Name"
            android:visibility="gone"
            android:layout_gravity="center"
            android:textAlignment="center"
            android:background="@drawable/border"/>

        <EditText
            android:id="@+id/ETLastName"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_marginTop="18dp"
            android:hint="Last Name"
            android:visibility="gone"
            android:layout_gravity="center"
            android:textAlignment="center"
            android:background="@drawable/border"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="18dp"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/ETGender"
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:layout_marginRight="15dp"
                android:hint="Gender"
                android:layout_weight="1"
                android:visibility="gone"
                android:layout_gravity="center"
                android:textAlignment="center"
                android:background="@drawable/border"/>
            <EditText
                android:id="@+id/ETAge"
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:layout_marginLeft="15dp"
                android:inputType="number"
                android:hint="Age"
                android:visibility="gone"
                android:layout_weight="1"
                android:layout_gravity="center"
                android:textAlignment="center"
                android:background="@drawable/border"/>

        </LinearLayout>

        <EditText
            android:id="@+id/ETEmployeeNumber"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_marginTop="18dp"
            android:hint="Employee Number"
            android:inputType="number"
            android:visibility="gone"
            android:layout_gravity="center"
            android:textAlignment="center"
            android:background="@drawable/border"/>


        <EditText
            android:id="@+id/ETEmail"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_marginTop="18dp"
            android:hint="Email"
            android:inputType="number"
            android:layout_gravity="center"
            android:textAlignment="center"
            android:visibility="gone"
            android:background="@drawable/border"/>


        <EditText
            android:id="@+id/ETPassword"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_marginTop="18dp"
            android:hint="Password"
            android:visibility="gone"
            android:inputType="textPassword"
            android:layout_gravity="center"
            android:textAlignment="center"
            android:background="@drawable/border"/>

        <EditText
            android:id="@+id/ETBalance"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_gravity="center"
            android:layout_marginTop="18dp"
            android:background="@null"
            android:visibility="gone"
            android:text="0"
            android:textAlignment="center" />
        <EditText
            android:id="@+id/ETUserStatus"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_gravity="center"
            android:layout_marginTop="18dp"
            android:background="@null"
            android:visibility="gone"
            android:text="0"
            android:textAlignment="center" />

        <Button
            android:id="@+id/btnSendMoney"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_gravity="center"
            android:backgroundTint="#800000"
            android:textColor="@color/white"
            android:text="Continue" />
        <!--        android:onClick="sndcontinue"-->


    </LinearLayout>
</LinearLayout>